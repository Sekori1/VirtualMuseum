<%= simple_form_for @art do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :date %>

  <%= f.input :images %>
  <%= f.button :submit %>


  <%= f.association :author %>
  <%= f.association :theme %>
<% end %>

