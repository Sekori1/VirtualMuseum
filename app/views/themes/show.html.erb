<p id="notice"><%= notice %></p>

<div class="element page-title">
    <span></span>
    <h2 class="text title"><%= @theme.title %></h2>
    <span></span>
</div>


<div class="container">


  <div class="row justify-content-center">
    <p class="col-10 col-sm-8 theme-description">
      <%= @theme.description %>
    </p>
  </div>
  
  <div class="row">
  <% @theme.arts.each do |art| %>

    <div class="art col-md-4 align-middle">
      
      <%= link_to art_path(art) do %>
      <div class="image-box"> 
          <%= image_tag art.images %>   
      </div>
      <% end %>
      <h2 class="art-title"><%= art.title %></h2>
     
      <% if art.author %>
        <p class="art-author">par <%= link_to ( art.author.firstname + " " + art.author.lastname) , author_path(art.author)  %></p>
      <% end %>
      <p class="art-date"><%= art.date %></p>
    </div>
  <% end %>
  </div>
    
</div>

<footer> 
    <%= link_to 'RETOUR'.html_safe , root_path, class: "button white-button"%>
</footer>
