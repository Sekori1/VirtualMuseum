<p id="notice"><%= notice %></p>

<div class="theme-title">
  <span></span>
  <h2><%= @theme.title %></h2>
  <span></span>
</div>

<p class="theme-description"><%= @theme.description %></p>


<% @theme.arts.each do |art| %>

  <div class="art">
    <div class="image"> 
      <%= image_tag art.images %>   
    </div>
    <div class="description">
      <h2><%= art.title %></h2>
      <p class="date"><%= art.date %></p>
      <p class="desc"><%= art.description %></p>
      <button class="black">AUTEUR</button>
    </div>
  </div>

<% end %>


<%= link_to 'Edit', edit_theme_path(@theme) %> |
<%= link_to 'Back', themes_path %>
